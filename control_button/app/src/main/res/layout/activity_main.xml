<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/header_background"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Touch Recorder"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record and replay screen touches"
            android:textSize="14sp"
            android:textColor="#E0FFFFFF"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📱 Overlay Controls"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start the overlay to display floating buttons on your screen"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/recordButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Start Overlay"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#4CAF50" />

                    <Button
                        android:id="@+id/replayButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Stop Overlay"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#F44336"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ℹ️ How to Use"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Tap 'Start Overlay' and grant permission\n\n2. Floating buttons will appear on screen\n\n3. Drag buttons to move them around\n\n4. Tap red circle to start recording\n\n5. Tap anywhere on screen to record touches\n\n6. Tap red square to stop recording\n\n7. Tap green replay to replay actions"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
