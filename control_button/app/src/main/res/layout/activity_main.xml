<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="#16213E"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ Countdown Timer"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floating timer with speed control"
            android:textSize="16sp"
            android:textColor="#94A3B8"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="8dp"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#0F3460">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🚀 Quick Start"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Launch the floating timer overlay"
                        android:textSize="14sp"
                        android:textColor="#94A3B8"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp" />

                    <Button
                        android:id="@+id/recordButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="▶ Start Timer Overlay"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#00D9FF" />

                    <Button
                        android:id="@+id/replayButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="⏹ Stop Timer Overlay"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#E94560"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#0F3460">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📖 How to Use"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1️⃣ Tap 'Start Timer Overlay' and grant permission\n\n2️⃣ Floating timer appears on screen\n\n3️⃣ Tap + to set timer (days, hours, minutes, speed)\n\n4️⃣ Timer counts down and syncs with Google Clock\n\n5️⃣ Tap ■ to stop timer\n\n6️⃣ Tap ✕ to close overlay\n\n7️⃣ Drag overlay to move it around"
                        android:textSize="15sp"
                        android:textColor="#94A3B8"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
